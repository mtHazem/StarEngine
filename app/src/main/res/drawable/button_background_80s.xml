<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The dark, semi-transparent body of the button -->
    <solid android:color="#A01A1A3A" />

    <!-- The neon gradient border -->
    <stroke
        android:width="4dp">
        <gradient
            android:startColor="#8A2BE2"
            android:endColor="#00BFFF"
            android:angle="45"
            android:type="linear"/>
    </stroke>

    <!-- Rounded corners for that retro look -->
    <corners android:radius="8dp" />

</shape>
