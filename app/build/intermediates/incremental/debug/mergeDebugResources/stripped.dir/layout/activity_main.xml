<?xml version="1.0" encoding="utf-8"?>
<!-- FIX: Changed to RelativeLayout to easily position header and footer -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- The Starfield background (No changes here) -->
    <FrameLayout
        android:id="@+id/starfield_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- NEW: Points Balance Display (Top Right) -->
    <TextView
        android:id="@+id/pointsBalanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:fontFamily="monospace"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Points: 9,999" />

    <!-- UI Elements centered on top (No changes here) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- GAME TITLE -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:fontFamily="monospace"
            android:shadowColor="#8A2BE2"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:text="STAR\nENGINE"
            android:textAlignment="center"
            android:textColor="#00BFFF"
            android:textSize="80sp"
            android:textStyle="bold" />

        <!-- START GAME BUTTON -->
        <Button
            android:id="@+id/startGameButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_80s"
            android:fontFamily="monospace"
            android:padding="16dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="START GAME"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Container for secondary buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <!-- UPGRADES BUTTON -->
            <Button
                android:id="@+id/upgradesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_80s"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:text="Upgrades"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- HIGH SCORES BUTTON -->
            <Button
                android:id="@+id/highScoresButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_80s"
                android:fontFamily="monospace"
                android:padding="12dp"
                android:text="Scores"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- NEW: Footer with your name -->
    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:padding="12dp"
        android:text="Developed by Hazem Maatoug"
        android:textColor="#90FFFFFF"
        android:textSize="14sp" />

</RelativeLayout>
